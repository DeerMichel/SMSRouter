<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="@string/action_edit_syntax"
        android:textSize="25sp"
        android:layout_margin="5dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_edit_syntax_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/accent_material_dark"
        android:layout_below="@+id/dialog_edit_syntax_title" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:inputType="textNoSuggestions"
        android:hint="@string/standard_syntax"
        android:id="@+id/dialog_edit_syntax_text_syntax"
        android:layout_below="@+id/dialog_edit_syntax_title" />

</RelativeLayout>